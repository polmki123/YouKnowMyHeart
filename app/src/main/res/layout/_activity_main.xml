<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loadingwhite"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="8">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="2"
        android:clickable="true"
        android:gravity="center"
        android:longClickable="false"
        android:orientation="horizontal"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="10">

            <Button
                android:id="@+id/btn_photo"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="7"
                android:background="#00907070"
                android:cursorVisible="false"
                android:foreground="@drawable/camera_button"
                android:text="사진찍기"
                app:backgroundTint="#FFFFFF" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="카메라"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="10">

            <Button
                android:id="@+id/btn_gall"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="7"
                android:background="#00907070"
                android:foreground="@drawable/gallery_button"
                android:text="갤러리"
                app:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="갤러리"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="10">

            <Button
                android:id="@+id/btn_send"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="7"
                android:background="#00907070"
                android:foreground="@drawable/sendserver_button"
                android:text="서버전송"
                app:backgroundTint="#FFFFFF" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="내맘보기"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>